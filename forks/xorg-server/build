#!/bin/sh -e

patch -p1 < rootless_modesetting.patch
patch -p1 < fix-crash.patch

./configure \
    --prefix=/usr \
    --localstatedir=/var \
    --disable-systemd-logind \
    --disable-xwayland \
    --disable-hal \
    --enable-debug \
    --disable-unit-tests \
    --disable-glx \
    --disable-dri \
    --disable-dri2 \
    --disable-dri3 \
    --disable-glamor \
    --disable-glx \
    --disable-xwin \
    --enable-xorg \
    --enable-xvfb \
    --with-sha1=libcrypto \
    --with-systemd-daemon=off

make
make DESTDIR="$1" install
